<!DOCTYPE html>
<html>
<head>
  <title>Oh SNAP</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- bootstrap navbar -->
  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container">
      <ul class=" nav navbar-nav">
        <% if user_signed_in? %>
            <p class="navbar-text">Welcome back, <%= current_user.first_name %>!</p>
            <li><%= link_to('My Profile', user_path(current_user)) %></li>
            <li><%= link_to('Sign Out', destroy_user_session_path, method: :delete)%></li>
        <% else %>
            <li ><%= link_to('Sign In', new_user_session_path) %></li>
            <li><%= link_to('Sign Up', new_user_registration_path) %></li>
        <% end %>
          <li><%= link_to('Home', root_path)%></li>
          <li><%= link_to('Play', play_path)%></li>
          <li><%= link_to('Stories', story_path)%></li>
      </ul>
    </div>
  </nav>

  <!-- content container -->
  <div class="container">
    <!-- Flash for Devise -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>

  <!-- hidden div for accessing user id in game -->
  <% if user_signed_in? %>
  <footer><div id="current-user" style="display:none"><%=current_user.id%></div></footer>
  <% end %> 
</body>
</html>
