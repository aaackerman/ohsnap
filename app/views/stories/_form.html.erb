<%= form_for @story, remote: true do |f| %>
  <div class="container col-centered">
    <div class="form-group">
      <div><h4>Title: </h4></div>
      <%= f.text_field(:title) %>
    </div>
    <div class="form-group">
      <div><h4>Content: </h4></div>
    <%= f.text_area(:content) %>
    </div>
    <div>
    <%= f.submit('Post Story') %>
    </div>
  </div>
<% end %>