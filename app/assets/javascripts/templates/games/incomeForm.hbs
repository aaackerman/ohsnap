<div class="text-center col-centered form-group animated fadeIn col-lg-6 col-md-6 col-sm-10 col-xs-10" id="slider">
  <h1 class="big-text">Choose a monthly household income.</h1>
  <h3 class="pull-left">$0</h3>
  <h3 class="pull-right">$4500</h3>
  <input class="bar" type="range" id="rangeinput" min="0" max="5000" step="100" onchange="rangevalue.value=value"/>
  <span class="highlight"></span>
  <output id="rangevalue">2250</output>
  <br>
  <input class="btn btn-primary btn-lg center-block" type="submit" id="select-income" value="Next">
</div>
