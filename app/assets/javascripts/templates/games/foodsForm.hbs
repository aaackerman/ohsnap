<div class="col-centered animated fadeIn col-lg-6 col-md-6 col-sm-12 col-xs-12 col-lg-offset-2">
    <h1 class="text-center" style="font-size: 30px" id="allotment">Allotment</h1> 
  <div class="form-group">
    <label for="food" class="reg-text">Add Items to Your Cart</label>
      <select class="form-control" id="foods-input">
        {{#each this}}
        <option id={{attributes.price}}>${{attributes.price}} | {{attributes.item}}</option>
        {{/each}}
      </select>  
      <br>
    <input class="btn btn-primary center-block" type="submit" id="add-item" value="Add to Cart">
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title reg-text text-center">Your Cart</h3>
    </div>
    <div class="panel-body">
        <ol id="items-list">
        </ol>
      <h4 class="pull-right" id="cart-total">0</h4>
      <input class="btn btn-primary center-block" type="submit" id="checkout" value="Checkout">
    </div>
  </div>
</div>